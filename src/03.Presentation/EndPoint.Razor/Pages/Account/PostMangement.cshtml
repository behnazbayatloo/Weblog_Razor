@page
@model EndPoint.Razor.Pages.Account.PostMangementModel

@{
    Layout = "_Layout-page";
    ViewData["Title"] = $"مدیریت پست ها {Request.Cookies["FirstName"]}";
}

<h2>مدیریت پست‌ها</h2>

<div id="message-box" class="mt-4 text-center text-sm">
    <div style="color:red">@Model.Message</div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">
        @Model.SuccessMessage
    </div>
}
<table class="table table-striped table-bordered">
    <thead>
        <tr> <th>عنوان</th> <th>تاریخ انتشار</th> <th>عکس پست</th><th>دسته بندی</th> <th>توضیحات</th><th>عملیات</th> </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
               

                <td>@post.Title</td>
                <td>@post.CreateAt</td>
                <td>
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" alt="@post.Title" style="max-height: 100px; max-width: 150px;" />
                    }
                    else
                    {

                        <span>عکسی موجود نیست</span>
                    }
                </td>
                <td>@post.Category</td>
                <td>@post.Description</td>
                <td>
                    <a asp-page="/Account/Edit" asp-route-id="@post.Id" class="btn btn-warning">ویرایش</a>
                    <form asp-page-handler="Delete" asp-route-id="@post.Id" method="post" style="display:inline" onsubmit="return confirm('آیا از حذف این پست مطمئن هستید؟');">
                        <button type="submit" class="btn btn-danger">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
